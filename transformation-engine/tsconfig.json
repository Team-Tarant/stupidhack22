{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "rootDirs": ["src"],
    "resolveJsonModule": true,
    "lib": ["es6", "dom", "esnext"]
  },
  "exclude": ["/node_modules", "public", "dist"]
}
